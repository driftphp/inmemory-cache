{
    "name": "drift/react-cache",
    "description": "Lightweight library that provides dynamic and smart local cache to your ReactPHP applications.",
    "keywords": ["ReactPHP", "cache"],
    "homepage": "https://github.com/driftphp/reactphp-cache",
    "license": "MIT",

    "authors": [
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        }
    ],

    "require": {
        "php": "^7.4 || ^8.0",
        "react/event-loop": "^1.0 || ^0.5 || ^0.4 || ^0.3.5",
        "react/promise": "^2.7 || ^1.2.1",
        "drift/react-functions": "^0.1"
    },
    "require-dev": {
        "clue/block-react": "^1.3",
        "phpunit/phpunit" : "^9"
    },

    "autoload": {
        "psr-4": {
            "Drift\\Cache\\": "src/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    }
}
